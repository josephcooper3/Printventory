<h3>Edit Product Details</h3>

<div class="form-wrapper">

  <form action="/products/<%= @product.id() %>" method="post">

    <div class="form-item">
      <label for="title-field">Title:</label>
      <input type="text" name="title" id="title-field"
      value="<%= @product.title() %>">
    </div>

    <div class="form-item">
      <label for="image_ref-field">image_ref:</label>
      <input type="text" name="image_ref" id="image_ref-field"
      value="<%= @product.image_ref() %>">
    </div>

    <div class="form-item">
      <label for="artist_id-select">Artist:</label>
      <select name="artist_id" id="artist_id-select">
        <% @artists.each do |artist| %>
        <% if artist.id() == @product.artist_id() %>
        <option value="<%= artist.id() %>" selected><%= artist.full_name() %></option>
        <% else %>
        <option value="<%= artist.id() %>"><%= artist.full_name() %></option>
        <% end %>
        <% end %>
      </select>
    </div>

    <div class="form-item">
      <label for="buying_cost-field">Buying Cost: £</label>
      <input type="number" min="0.01" step="0.01" name="buying_cost" id="buying_cost-field"
      value="<%= Product.convert_to_pounds(@product.buying_cost()) %>">
    </div>

    <div class="form-item">
      <label for="sale_price-field">Sale Price: £</label>
      <input type="number" min="0.01" step="0.01" name="sale_price" id="sale_price-field"
      value="<%= Product.convert_to_pounds(@product.sale_price()) %>">
    </div>

    <div class="form-item">
      <label for="copies_in_stock-field">Copies in Stock:</label>
      <input type="number" name="copies_in_stock" id="copies_in_stock-field"
      value="<%= @product.copies_in_stock() %>">
    </div>

    <div class="form-item">
      <label for="image_ref-field">Image Reference:</label>
      <input type="text" name="image_ref" id="image_ref-field"
      value="<%= @product.image_ref() %>">
    </div>

    <br>

    <div class="form-item">
      <input type="submit" value="Submit">
    </div>

  </form>

</div>
